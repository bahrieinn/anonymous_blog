<% if @posts %>
  <% @posts.each do |post| %>
    <h3><%= post.title %></h3><p><%= post.fix_datetime %></p><br>
    <p><%= post.author %></p><br>
    <p><%= post.body %></p><br>
    <ul>
      <% if post.tags %>
        <% post.tags.each do |tag| %>
          <li><a href="/tags/<%= tag.name %>"><%= tag.name %></a></li>
        <% end %>
      <% end %>
    </ul>
  <% end %>
<% end %>
